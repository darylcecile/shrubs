{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "stripInternal": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./scripts"
  ]
}
